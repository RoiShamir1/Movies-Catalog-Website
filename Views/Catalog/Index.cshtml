@model List<WebApplicationASP.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<h2>The Catalog</h2>

<p>
    <form action="/Catalog/Index">
        <div class="form-group col-sm-4">
            <label class="control-label">Select a category</label>
            <select class="form-control" name="id" onchange="this.form.submit()" asp-items="ViewBag.CategoryId"></select>
        </div>
    </form>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Movie name
                @*@Html.DisplayNameFor(model => model.MovieName)*@
            </th>
            <th>
                Year
                @*@Html.DisplayNameFor(model => model.Year)*@
            </th>
            <th>
                Description
                @*@Html.DisplayNameFor(model => model.Description)*@
            </th>
            <th>
                Image
                @*@Html.DisplayNameFor(model => model.ImageFile)*@
            </th>
            <th>
                Category
                @*@Html.DisplayNameFor(model => model.Category)*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MovieName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @*<img src="@item.ImageFile" width="150" />*@
                    <img src="~/@item.ImageFile" width="150" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category!.CategoryName)
                </td>
                <td>
                    @*<a asp-action="CreateComment" asp-route-id="@item.MovieId">Add new comment</a> |*@
                    <a asp-action="Details" asp-route-id="@item.MovieId">Show comments</a>
                    @*<a asp-action="Delete" asp-route-id="@item.MovieId">Delete</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>
