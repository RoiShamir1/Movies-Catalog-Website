@model  IEnumerable<WebApplicationASP.Models.MovieViewModel>

@{
    ViewData["Title"] = "Index";
}

<h2>The most popular movies</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Movie name
            </th>
            <th>
                Year
            </th>
            <th>
                Description
            </th>
            <th>
                Image
            </th>
            <th>
                Category
            </th>
            <th>
                Number of comments
            </th>
            <th>
                Details
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Movie.MovieName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Movie.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Movie.Description)
            </td>
            <td>
                <img src="@item.Movie.ImageFile" width="150"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Movie.Category!.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumOfComments)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Movie.MovieId">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
